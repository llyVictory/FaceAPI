<body>
    <div id="app" class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">ğŸ‘¤ äººè„¸åº•åº“ç®¡ç†ç³»ç»Ÿ</h1>
            <span class="text-sm text-gray-500">API: {{ apiBase }}</span>
        </div>

        <!-- å½•å…¥åŒºåŸŸ -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4 text-indigo-600">ğŸ“¥ å½•å…¥æ–°äººå‘˜</h2>
            <div class="flex flex-col md:flex-row gap-4 items-end">
                <div class="flex-1 w-full">
                    <label class="block text-gray-700 text-sm font-bold mb-2">å§“å</label>
                    <input v-model="newName" type="text" placeholder="è¯·è¾“å…¥å§“å"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div class="flex-1 w-full">
                    <label class="block text-gray-700 text-sm font-bold mb-2">ç…§ç‰‡ (æ­£è„¸/æ— é®æŒ¡)</label>
                    <input ref="fileInput" type="file" accept="image/*"
                        class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                </div>
                <button @click="uploadUser" :disabled="uploading"
                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300 transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed h-10">
                    {{ uploading ? 'ä¸Šä¼ ä¸­...' : 'ç¡®è®¤å½•å…¥' }}
                </button>
            </div>
            <p v-if="message" :class="{'text-green-600': msgType==='success', 'text-red-600': msgType==='error'}"
                class="mt-3 text-sm font-medium">
                {{ message }}
            </p>
        </div>

        <!-- åˆ—è¡¨åŒºåŸŸ -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-800">ğŸ“‹ å·²å½•å…¥äººå‘˜åˆ—è¡¨ ({{ userList.length }})</h2>
                <button @click="fetchUsers" class="text-indigo-600 hover:text-indigo-800 text-sm">ğŸ”„ åˆ·æ–°åˆ—è¡¨</button>
            </div>

            <div v-if="loading" class="text-center py-10 text-gray-500">åŠ è½½ä¸­...</div>

            <div v-else-if="userList.length === 0" class="text-center py-10 text-gray-400">
                æš‚æ— æ•°æ®ï¼Œè¯·å…ˆå½•å…¥äººå‘˜
            </div>

            <div v-else class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <div v-for="user in userList" :key="user.id"
                    class="border border-gray-100 rounded-lg p-4 hover:shadow-lg transition duration-300 flex items-center justify-between bg-gray-50">
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-lg">
                            {{ user.name.charAt(0) }}
                        </div>
                        <div>
                            <p class="font-bold text-gray-800">{{ user.name }}</p>
                            <p class="text-xs text-gray-500">ID: {{ user.id }}</p>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <!-- å¯ä»¥åŠ ä¸€ä¸ªæŸ¥çœ‹ç‰¹å¾çš„æŒ‰é’®å¦‚æœéœ€è¦ -->
                        <button @click="deleteUser(user.id)"
                            class="text-red-500 hover:text-red-700 bg-red-50 hover:bg-red-100 p-2 rounded-full transition">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const { createApp, ref, onMounted } = Vue;

        createApp({
            setup() {
                // æ ¹æ®å®é™…æƒ…å†µä¿®æ”¹ç«¯å£ï¼Œæ‚¨ç›®å‰æ˜¯ 8070
                const apiBase = 'http://localhost:8070';

                const userList = ref([]);
                const newName = ref("");
                const fileInput = ref(null);
                const uploading = ref(false);
                const loading = ref(false);
                const message = ref("");
                const msgType = ref("success");

                const fetchUsers = async () => {
                    loading.value = true;
                    try {
                        const res = await fetch(`${apiBase}/api/users`);
                        const json = await res.json();
                        if (json.code === 200) {
                            userList.value = json.data;
                        }
                    } catch (e) {
                        showMessage("æ— æ³•è¿æ¥æœåŠ¡å™¨", "error");
                    } finally {
                        loading.value = false;
                    }
                };

                const uploadUser = async () => {
                    if (!newName.value || !fileInput.value.files[0]) {
                        showMessage("è¯·å¡«å†™å§“åå¹¶é€‰æ‹©ç…§ç‰‡", "error");
                        return;
                    }

                    uploading.value = true;
                    const formData = new FormData();
                    formData.append('name', newName.value);
                    formData.append('file', fileInput.value.files[0]);

                    try {
                        const res = await fetch(`${apiBase}/api/users`, {
                            method: 'POST',
                            body: formData
                        });
                        const json = await res.json();

                        if (json.code === 200) {
                            showMessage(`æˆåŠŸå½•å…¥: ${json.data.name}`, "success");
                            newName.value = "";
                            fileInput.value.value = ""; // Clear file
                            fetchUsers(); // Refresh list
                        } else {
                            showMessage(`å½•å…¥å¤±è´¥: ${json.msg}`, "error");
                        }
                    } catch (e) {
                        showMessage("ç½‘ç»œé”™è¯¯: " + e.message, "error");
                    } finally {
                        uploading.value = false;
                    }
                };

                const deleteUser = async (id) => {
                    if (!confirm("ç¡®å®šè¦åˆ é™¤è¯¥äººå‘˜å—ï¼Ÿæ­¤æ“ä½œä¸å¯æ¢å¤ã€‚")) return;

                    try {
                        const res = await fetch(`${apiBase}/api/users/${id}`, { method: 'DELETE' });
                        const json = await res.json();
                        if (json.code === 200) {
                            showMessage("åˆ é™¤æˆåŠŸ", "success");
                            fetchUsers();
                        } else {
                            showMessage("åˆ é™¤å¤±è´¥", "error");
                        }
                    } catch (e) {
                        showMessage("ç½‘ç»œé”™è¯¯", "error");
                    }
                };

                const showMessage = (text, type) => {
                    message.value = text;
                    msgType.value = type;
                    setTimeout(() => message.value = "", 3000);
                }

                onMounted(() => {
                    fetchUsers();
                });

                return {
                    apiBase,
                    userList,
                    newName,
                    fileInput,
                    uploading,
                    loading,
                    message,
                    msgType,
                    uploadUser,
                    deleteUser,
                    fetchUsers
                };
            }
        }).mount('#app');
    </script>
</body>

</html>